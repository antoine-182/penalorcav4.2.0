   sn_wndj     = 'v_10_CORE2_fill'            ,         6.        , 'V_10_MOD',   .false.    ,  .true. , 'yearly'  , 'weights_bicubic.nc'  , 'Vwnd'   , ''
   sn_qsr      = 'ncar_rad_CORE2_fill'        ,        24.        , 'SWDN_MOD',   .false.    ,  .true. , 'yearly'  , 'weights_bilinear.nc' , ''       , ''
